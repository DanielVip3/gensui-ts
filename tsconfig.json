{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "target": "es6",
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true
    },
    "exclude": [
        "tests",
        "dist"
    ]
}